# 后端开发环境配置
NODE_ENV=development
PORT=3001
HOST=localhost

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-for-development-only-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-for-development

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_DESTINATION=./uploads
UPLOAD_TEMP_DIR=./uploads/temp
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf

# 验证码配置
CAPTCHA_SECRET=your-captcha-secret-key-for-development
CAPTCHA_EXPIRES_IN=300000

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# 日志配置
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# 健康检查配置
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# 数据库配置（可选）
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=onecar_dev
DB_USERNAME=postgres
DB_PASSWORD=
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis 配置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=onecar:dev:

# 会话配置
SESSION_SECRET=your-session-secret-for-development
SESSION_MAX_AGE=86400000
SESSION_SECURE=false

# 安全配置
BCRYPT_SALT_ROUNDS=10
CSRF_SECRET=your-csrf-secret-for-development

# 开发工具配置
ENABLE_API_DOCS=true
ENABLE_DEBUG_ROUTES=true
ENABLE_QUERY_LOGGING=true