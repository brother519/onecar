# 后端生产环境配置
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# JWT 配置 - 生产环境必须使用强密钥
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=2h
JWT_REFRESH_SECRET=CHANGE_THIS_TO_A_STRONG_REFRESH_SECRET_IN_PRODUCTION

# CORS 配置 - 生产环境限制域名
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_DESTINATION=./uploads
UPLOAD_TEMP_DIR=./uploads/temp
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf

# 验证码配置
CAPTCHA_SECRET=CHANGE_THIS_TO_A_STRONG_CAPTCHA_SECRET_IN_PRODUCTION
CAPTCHA_EXPIRES_IN=300000

# 速率限制配置 - 生产环境更严格的限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=52428800
LOG_MAX_FILES=10

# 健康检查配置
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=10000

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/onecar_prod
DB_HOST=localhost
DB_PORT=5432
DB_NAME=onecar_prod
DB_USERNAME=onecar_user
DB_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_SSL=true

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION
REDIS_DB=0
REDIS_PREFIX=onecar:prod:

# 会话配置
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_IN_PRODUCTION
SESSION_MAX_AGE=3600000
SESSION_SECURE=true

# 安全配置
BCRYPT_SALT_ROUNDS=12
CSRF_SECRET=CHANGE_THIS_CSRF_SECRET_IN_PRODUCTION

# 生产环境安全设置
ENABLE_API_DOCS=false
ENABLE_DEBUG_ROUTES=false
ENABLE_QUERY_LOGGING=false
HELMET_ENABLED=true
TRUST_PROXY=true