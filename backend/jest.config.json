{
  "testEnvironment": "node",
  "roots": ["<rootDir>/src", "<rootDir>/tests"],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/app.js",
    "!src/**/*.test.js",
    "!src/**/*.spec.js",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testTimeout": 10000
}