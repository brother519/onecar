# 生产环境配置
# 后端 API 地址
VITE_API_BASE_URL=/api

# 应用配置
VITE_APP_TITLE=OneCar 商品管理系统
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=功能丰富的商品后台管理系统

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_HOT_RELOAD=false
VITE_ENABLE_DEVTOOLS=false

# 文件上传配置
VITE_UPLOAD_MAX_SIZE=5242880
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# 性能配置
VITE_VIRTUAL_SCROLL_ITEM_SIZE=80
VITE_INFINITE_SCROLL_THRESHOLD=200
VITE_DEBOUNCE_DELAY=300

# 安全配置
VITE_ENABLE_CSP=true
VITE_ENABLE_RATE_LIMIT=true

# 调试配置
VITE_LOG_LEVEL=error
VITE_SHOW_PERFORMANCE_METRICS=false