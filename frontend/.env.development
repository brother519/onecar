# 开发环境配置
# 后端 API 地址
VITE_API_BASE_URL=http://localhost:3001/api

# 应用配置
VITE_APP_TITLE=OneCar 开发版
VITE_APP_VERSION=1.0.0-dev
VITE_APP_DESCRIPTION=OneCar 商品管理系统 - 开发环境

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_DEVTOOLS=true

# 文件上传配置
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# 性能配置
VITE_VIRTUAL_SCROLL_ITEM_SIZE=80
VITE_INFINITE_SCROLL_THRESHOLD=200
VITE_DEBOUNCE_DELAY=300

# 安全配置
VITE_ENABLE_CSP=false
VITE_ENABLE_RATE_LIMIT=false

# 调试配置
VITE_LOG_LEVEL=debug
VITE_SHOW_PERFORMANCE_METRICS=true